# Server port
PORT=5174

# CORS: Comma-separated origins allowed to call the API
# Example: FRONT_ORIGIN=http://127.0.0.1:5500,http://localhost:5500
# If unset, all origins are allowed (development convenience)
FRONT_ORIGIN=

# SMTP settings (required for sending application emails)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# Mail addresses
MAIL_FROM=everne@example.com
MAIL_TO=owner@example.com

# Admin token to protect admin APIs (recommended)
# Set any random string; clients must send it via header: x-admin-token
ADMIN_TOKEN=change_me_to_a_random_string

